{% extends 'base.html.twig' %}


{% block body %}    
<h1 class="h3 mb-2 text-gray-800">Pacientes</h1>
<p class="mb-4"></p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3 flex">
    <h5 class="m-0 font-weight-bold text-primary" style="display:inline">Lista</h5>
    <a name="" id="" class="btn btn-primary float-right" href="{{ path('paciente_new') }}" role="button">Nuevo</a>
    
  </div>
  
  <div class="card-body">
    
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Fecha de Registro</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Fecha de Registro</th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            {% for paciente in pacientes %}
            <tr>
                <td>{{ paciente.nombre }}</td>
                <td>{{ paciente.apellidos }}</td>
                <td>{{ paciente.correo }}</td>
                <td>{{ paciente.telefono }}</td>
                <td>{{ paciente.fechaRegistro ? paciente.fechaRegistro|date('d/m/Y H:i:s') : '' }}</td>
                <td>
                    <a type="button" class="btn btn-outline-secondary" href="{{ path('paciente_show', {'id': paciente.id}) }}">Detalles</a>
                    <a type="button" class="btn btn-outline-secondary" href="{{ path('paciente_edit', {'id': paciente.id}) }}">Editar</a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
